{
  "src_folders": [
    "tests/e2e"
  ],
  "output_folder": "test-output/e2e",
  "custom_assertions_path": "",
  "page_objects_path": "tests/page-objects",
  "globals_path": "tests/utils/globals.js",
  "selenium": {
    "start_process": true,
    "server_path": "node_modules/selenium-standalone/.selenium/selenium-server/",
    "log_path": "",
    "port": 4446,
    "cli_args": {
      "webdriver.chrome.driver": "node_modules/selenium-standalone/.selenium/chromedriver/2.36-x64-chromedriver",
      "webdriver.gecko.driver": "node_modules/selenium-standalone/.selenium/geckodriver/0.16.01-x64-geckodriver",
      "webdriver.edge.driver": ""
    }
  },
  "test_settings": {
    "default": {
      "launch_url": "//SET DYNAMICALLY VIA CONFIG",
      "selenium_port": 4446,
      "selenium_host": "localhost",
      "silent": true,
      "screenshots": {
        "enabled": true,
        "path": "test-output/e2e/screenshots",
        "on_failure": true
      },
      "desiredCapabilities": {
        "browserName": "chrome",
        "javascriptEnabled": true,
        "acceptSslCerts": true,
        "chromeOptions": {
          "args": [
            "--no-sandbox",
            "--disable-gpu"
          ]
        }
      },
      "globals": {
        "waitForConditionTimeout": 60000,
        "disable_a11y": false
      }
    },
    "remote": {
      "launch_url": "${CLUSTER}"
    },
    "no-a11y": {
      "globals": {
        "disable_a11y": true
      }
    },
    "chrome": {
      "desiredCapabilities": {
        "browserName": "chrome",
        "chromeOptions": {
          "args" : ["window-size=1024,768"]
        }
      }
    },
    "firefox": {
      "desiredCapabilities": {
        "browserName": "firefox",
        "version": ""
      }
    },
    "safari": {
      "desiredCapabilities": {
        "browserName": "safari"
      }
    },
    "ie": {
      "desiredCapabilities": {
        "browserName": "internet explorer"
      }
    }
  }
}
